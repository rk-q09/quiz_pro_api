{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es5",                       
    "module": "commonjs",                     
    "strict": true,                         
    "esModuleInterop": true,              
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@models/*": ["./src/models/*"],
      "@routes": ["./src/routes"],
      "@utils/*": ["./src/utils/*"],
      "@errors/*": ["./src/errors/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@services/*": ["./src/services/*"],
      "@config/*": ["./src/config/*"],
      "@test/*": ["./src/test/*"]
    }
  }
}
